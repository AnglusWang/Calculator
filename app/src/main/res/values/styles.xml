<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="baseButtonStyle">
        <item name="android:layout_margin">5dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Col1Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.6</item>
    </style>

    <style name="Col2Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button3Style" parent="baseButtonStyle">
        <item name="android:background">@drawable/button2_selector</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button4Style" parent="baseButtonStyle">
        <item name="android:background">@drawable/button4_selector</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Button5Style" parent="baseButtonStyle">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_weight">1</item>
    </style>


</resources>
